<h3>Categories</h3>

<ul>
	<% @categories.each do |category| %>
		<li>
			<%= link_to category.name, category_path(category)%>
			<%= link_to "Edit", edit_category_path(category), class:"btn btn_admin" %>
			<%= link_to "Delete", category_path(category), method: :delete, data:{confirm:"Are you sure?"}, class:"btn btn_admin" %>
		</li>
	<% end %>
</ul>

<%= link_to "Create A New Category", new_category_path, class:"btn btn_admin" %>

<%= link_to "Create A New Product", new_product_path, class:"btn btn_admin" %>
