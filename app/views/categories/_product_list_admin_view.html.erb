<div class="col-1-4">
	<%=link_to(image_tag(product.photos.first.image.url, class: "product_list_image"), product_path(product)) if product.photos[0] %>	
	<h3 class="product_title"><%=link_to product.title, product_path(product)%></h3>
	<p class="product_abstract"><%= product.abstract%></p>
	<h4 class="product_price"><%= number_to_currency(product.price) %></h4>
	<h4 class="product_stock"><%= "Current Stock: #{product.stock}" %></h4>
	<h5><%= link_to "Edit", edit_product_path(product), class:"btn btn_admin" %>
	<%= link_to "Delete", product_path(product), method: :delete, data:{confirm:"Are you sure?"}, class:"btn btn_admin" %></h5>
</div>

