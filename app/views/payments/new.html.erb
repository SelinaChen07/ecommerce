<ol class = "horizontal_nav checkout_nav">
	<li class="col-1-3 align-left"><%= link_to "1. Shopping Cart", shoppingcart_path %></li>
	<li class="col-1-3 align-left"><%= link_to "2. Delivery", edit_checkout_shipping_address_path%></li>
	<li class="col-1-3 align-left" id="checkout_session">3. Payment</li>
</ol>

<div class="row">
	<section class="col-1-2 align-left">
	  <%= form_tag payments_path do%>
	    <h2>Pay with credit card or paypal. </h2>
	    <p>Click on the paypal button to pay with paypal.</p>
	    <div id="dropin"></div>
	    <div><%= image_tag "/payment methods.png", alt:"Visa/Master Card/AMEX", id: "payment_image" %></div>
	    <%= submit_tag "Pay" %>
	  <%end%>
	</section>

	<section class="col-1-2 align-right">
		<section>
			<h2>Order Summary</h2>
			<table class="table-align-right">
				<tbody>
					<% @order_items.each do |order_item| %>
						<tr>
							<% product = order_item.product %>
							<td >
								<%=image_tag(product.photos.first.image.thumb.url, class: "product_preview_image") if product.photos[0]%>
							</td>
							<td>
								<p><%= product.title%></p>
								<p><%= "QTY #{order_item.product_quantity}" %></p>
							</td>
							<td><%= number_to_currency(order_item.subtotal) %></td>
						</tr>
					<% end %>
				</tbody>


				<tfoot>
					<tr>
						<td colspan="2">Subtotal</td>
						<td><%= number_to_currency(@order.subtotal) %></td>
					</tr>
					<tr>
						<td colspan="2">Delivery</td>
						<td><%= number_to_currency(@order.delivery_fee) %></td>
					</tr>
					<tr>
						<td colspan="2">Total (incl. GST)</td>
						<td><%= number_to_currency(@order.total) %></td>
					</tr>
				</tfoot>
			</table>
		</section>

		<section>
			<h2>Delivery Information</h2>
			<%= render "shared/shipping_address", order: @order %>
		</section>
	</section>
</div>
